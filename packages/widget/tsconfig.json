{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom"],
    "jsx": "react",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    },
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true
  }
}
